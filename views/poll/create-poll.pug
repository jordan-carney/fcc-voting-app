extends ../base

block append body

  .row
   
    include ../home/inner-side-nav

    .col.s9
      h2.header Create Poll

      if (error)
        p #{error}

      form(method="post")
        .row.center-align
          input(
            type="hidden"
            name="_csrf"
            value=csrfToken
          )

          .input-field
            input(
              type="text"
              name="title"
              required="true"
            )
            label(for="title")
              | Title

          .input-field.option
            input(
              type="text"
              name="option"
              require="true"
            )
            label(for="option")
              | Option
              
          .input-field.option
            input(
              type="text"
              name="option"
              require="true"
            )
            label(for="option")
              | Option

          .optionControls.left-align
            span.btn.light-green#addOption + 
            span.btn.red#delOption.hide -

          button.btn.light-blue(type="submit") Create Poll