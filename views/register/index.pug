extends ../base

block append body
    h2.header.center Register

    if (error)
      p #{error}

    form(method="post")
      .row
        input(
          type="hidden"
          name="_csrf"
          value=csrfToken
        )

        .input-field.col.s6
          i.material-icons.prefix
            | account_circle
          input(
            type="text"
            placeholder="First Name"
            name="firstName"
            required="true"
          )
          label(for="firstName")
            | Name

        .input-field.col.s6
          input(
            type="text"
            placeholder="Last Name"
            name="lastName"
            required="true"
          )

      .input-field
        i.material-icons.prefix
          | mail
        input(
          id="email"
          type="text"
          placeholder="Email Address"
          name="email"
          require="true"
        )
        if (error)
          label(for="email" data-wrong=error)

      .input-field
        i.material-icons.prefix
          | lock
        input(
          type="password"
          placeholder="Password"
          name="password"
          require="true"
        )

      button.btn.light-blue(type="submit") Register
