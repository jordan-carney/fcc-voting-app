extends ../base

block append body

  .row

    include inner-side-nav

    .col.s9
      h2.header Active Polls
      if (!userPolls.length) 
        p It doesn't look like you have any polls yet. Get started by 
          a(href="/create-poll")
            | creating a new poll
          |.      
      else
        each poll in userPolls
          .card.white
            .card-content
              span.card-title #{poll.title}
              each option in poll.options
                p #{option.title} - #{option.votes}
            .card-action
              a(href="#") Edit Poll
              a(href="#") Share Poll
              a.right.red-text.text-darken-1(href="#") Delete Poll